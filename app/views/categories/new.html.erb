<%= render 'shared/navbar' %>
<div class="container padding-navbar">
  <h1>Ajouter une nouvelle catégorie de place</h1>
</div>
<div class="container">
<%= simple_form_for @category do |f| %>
  <div class="form-group">
    <%= f.collection_select :concert_event_id, ConcertEvent.all, :id, :artist_name, {:prompt => "Choisissez un artiste"} ,class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.input :category_name, collection: ['CAT1','CAT2','CAT3','CAT4','Fosse','Carré Or'], class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.input :price ,class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.input :fast_delivery_fee, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
</div>
