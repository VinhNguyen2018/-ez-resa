<%= render 'shared/navbar' %>
<div class="container padding-navbar">
  <h1>Nouveau concert</h1>
  <%= link_to new_concert_hall_path do %>
      <button class="btn btn-primary">Ajouter une salle de concert ?</button>
  <% end %>
</div>
<div class="container">
<%= simple_form_for :concert_event, url: concerts_path, method: :post do |f| %>
  <div class="form-group">
    <%= f.input :artist_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.input :event_date, as: :string, placeholder: "YYYY-MM-DD" ,class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.input :event_end_booking, as: :string, placeholder: "YYYY-MM-DD", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.collection_select :concert_hall_id, ConcertHall.all, :id, :hall_name, {:prompt => "Choisissez un hall"}, class: "form-control"   %>
  </div>
  <div class="form-group">
    <%= f.file_field :photo %>
    <%= f.input :photo_cache, as: :hidden %>
  </div>
  <div class="form-group">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
</div>
