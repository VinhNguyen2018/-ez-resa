<%= render 'shared/navbar' %>
<div class="container padding-navbar">
  <h1>Nouvelle salle de concert</h1>
</div>
<div class="container">
<%= simple_form_for :concert_hall, url: concert_halls_path, method: :post do |f| %>
  <div class="form-group">
    <%= f.input :hall_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.input :full_address ,class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.input :city, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.input :country, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.file_field :photo %>
    <%= f.input :photo_cache, as: :hidden %>
  </div>
  <div class="form-group">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
</div>
