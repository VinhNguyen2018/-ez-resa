<% I18n.translate %>

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.6) 50%), url(<%= image_path("banner.png")%>);">
<%= render "shared/navbarhome" %>
  <div class="form-session">
    <h2>Bienvenue</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" }, :placeholder => "Entrez votre email" %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" }, :placeholder => "Mot de passe" %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Se connecter" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>

  </div>


</div>
